<div class="container col-6 justify-content-center m-auto">
  <h3 class="text-center">New bookmark</h3>
  <%= simple_form_for([@list, @bookmark]) do |form|  %>
    <div class="form-outline mb-4">
      <%= form.association :movie, collection: Movie.order('title ASC') %>
    </div>
    <div class="form-outline mb-4">
      <%= form.input :comment %>
    </div>
    <%= link_to 'Back', list_path(@list), class:'btn btn-ghost' %>
    <%= form.button :submit, class:'btn btn-flat' %>
  <% end %>
</div>
